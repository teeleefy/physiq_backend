{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "default": {},
    "title": "Root Schema",
    "required": [
        "name",
        "email",
        "password"
    ],
    "properties": {
        "name": {
            "type": "string",
            "default": "Our Family",
            "title": "The name Schema",
            "minLength": 1,
            "maxLength": 50,
            "examples": [
                "The Smith Family"
            ]
        },
        "email": {
            "type": "string",
            "title": "The email Schema",
            "minLength": 6,
            "maxLength": 60,
            "format": "email",
            "examples": [
                "email@email.com"
            ]
        },
        "password": {
            "type": "string",
            "minLength": 8,
            "title": "The password Schema",
            "examples": [
                "jklfjdasj88938sfa"
            ]
        },
        "is_admin": {
            "type": "boolean",
            "default": false,
            "title": "The is_admin Schema",
            "examples": [
                false
            ]
        }
    },
    "examples": [{
        "name": "The Smith Family",
        "email": "email@email.com",
        "password": "jklfjdasj88938sfa",
        "is_admin": false
    }]
}