{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "default": {},
    "title": "Root Schema",
    "required": [],
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string",
            "default": "Our Family",
            "title": "The name Schema",
            "minLength": 1,
            "maxLength": 50,
            "examples": [
                "The Smith Family"
            ]
        },
        "email": {
            "type": "string",
            "title": "The email Schema",
            "minLength": 6,
            "maxLength": 60,
            "format": "email",
            "examples": [
                "email@email.com"
            ]
        }
    }
}